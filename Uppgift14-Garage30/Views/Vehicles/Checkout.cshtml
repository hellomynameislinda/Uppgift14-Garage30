@model Uppgift14_Garage30.Models.ViewModels.VehicleCheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout vehicle from garage</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemberPersonalId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberPersonalId)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
       
        <dt class="col-sm-2">
            Parked since
        </dt>
        <dd class="col-sm-10">
            @if (Model.CurrentParking != null)
            {
                @Model.CurrentParking.ParkingStarted.ToString("yyy-MM-dd HH:mm")
            }
        </dd>

    </dl>

    <form asp-action="Checkout">
        <input type="hidden" asp-for="RegistrationNumber" />
        <input type="submit" value="Confirm Checkout" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
